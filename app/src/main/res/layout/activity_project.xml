<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="trilodi.ru.free_lance.UI.ProjectActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:paddingLeft="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="36dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/backButton"
                android:src="@drawable/ic_back"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:id="@+id/profileData">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/avatarImage" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userName"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/online_status"
                        android:textColor="#ffffff"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/login_toolbar" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:paddingLeft="16dp"
                android:paddingTop="5dp"
                android:paddingRight="16dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleText"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:id="@+id/onlypro"
                        android:background="@drawable/only_style"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:text="Только для"
                            android:id="@+id/textView3"
                            android:gravity="center_vertical|top"
                            android:textSize="12dp"
                            android:typeface="normal"
                            android:textStyle="normal"
                            android:textColor="#ff787878" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="15dp"
                            android:id="@+id/imageView3"
                            android:src="@drawable/pro_list"
                            android:layout_alignParentTop="false"
                            android:layout_toRightOf="@+id/textView3"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="93dp"
                        android:id="@+id/onlyver"
                        android:background="@drawable/only_style"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="14dp"
                            android:text="Только для"
                            android:id="@+id/textView5"
                            android:gravity="center_vertical|top"
                            android:textSize="12dp"
                            android:typeface="normal"
                            android:textStyle="normal"
                            android:textColor="#ff787878" />

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:id="@+id/imageView4"
                            android:src="@drawable/verified_list"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/textView5"
                            android:layout_toEndOf="@+id/textView5"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="0dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/dateText"
                        android:layout_gravity="right"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="0dp"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:gravity="right"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/budgetText"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentBottom="false"
                        android:singleLine="true"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 ответов"
                        android:id="@+id/responsesText"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="13dp"
                        android:textColor="#ffffff"
                        android:layout_weight="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descrText"
                    android:autoText="false"
                    android:textSize="15dp"
                    android:textIsSelectable="false"
                    android:textColor="#333333"
                    android:autoLink="all" />

                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/attachesList"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.gc.materialdesign.views.ButtonFloat
        android:id="@+id/buttonFloat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="24dp"
        android:background="@color/primary"
        materialdesign:animate="true"
        materialdesign:iconDrawable="@drawable/ic_action_edit" />

</RelativeLayout>
