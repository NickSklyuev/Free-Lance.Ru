<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/titleText"
                    android:textSize="18dp"
                    android:focusable="false"
                    android:layout_weight="1"
                    android:textColor="#333333" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/priceText"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="#ff404040"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:focusable="false"
                android:id="@+id/descrText"
                android:textSize="15dp"
                android:textColorLink="#ff78abc8"
                android:autoLink="phone|email|map|web" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/onlypro"
                    android:background="@drawable/only_style"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:text="Только для"
                        android:id="@+id/textView3"
                        android:gravity="center_vertical|top"
                        android:textSize="12dp"
                        android:typeface="normal"
                        android:textStyle="normal"
                        android:textColor="#ff787878" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="12dp"
                        android:id="@+id/imageView3"
                        android:src="@drawable/pro_list"
                        android:layout_alignParentTop="false"
                        android:layout_toRightOf="@+id/textView3"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="93dp"
                    android:id="@+id/onlyverified"
                    android:background="@drawable/only_style"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:text="Только для"
                        android:id="@+id/textView5"
                        android:gravity="center_vertical|top"
                        android:textSize="12dp"
                        android:typeface="normal"
                        android:textStyle="normal"
                        android:textColor="#ff787878" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:id="@+id/imageView4"
                        android:src="@drawable/verified_list"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/textView5"
                        android:layout_toEndOf="@+id/textView5"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/dateText"
                    android:layout_gravity="right"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="0dp"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:gravity="right"
                    android:textColor="#ff828282" />

            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>

    <com.appodeal.ads.BannerView
        android:id="@+id/appodealBannerView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone" />

    <!--<ru.wapstart.plus1.sdk.Plus1BannerView
        android:id="@+id/plus1BannerView"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:visibility="gone"
        />-->

</LinearLayout>