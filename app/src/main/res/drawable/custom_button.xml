<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <corners android:radius="3dp" />
        <solid android:color="#fff"/>
        <gradient android:angle="270" android:centerColor="@color/accent"  android:endColor="@color/accent" android:startColor="@color/accent" android:type="linear" />
        <stroke android:width="1dp" android:color="@color/accent" />
    </shape></item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="3dp" />

            <gradient android:angle="270" android:centerColor="@color/primary"  android:endColor="@color/primary" android:startColor="@color/primary" android:type="linear" />

            <stroke android:width="1dp" android:color="@color/primary" />
        </shape></item>

</selector>